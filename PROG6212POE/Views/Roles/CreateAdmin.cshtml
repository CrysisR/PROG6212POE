<partial name="_Toastr"/>
<br />
<!--For admin creation on the spot-->
<div class="col-md-4 mx-auto">
    <h2>Create Admin</h2>
    <br />
<form asp-action="CreateAdmin" method="post">
    <h6>User details</h6>
    <div class="mb-3">
        <input name="username" class="form-control" autocomplete="username" placeholder="name@example.com" />
    </div>
    <br />
    <div class="mb-3">
        <input name="password" type="password" class="form-control" placeholder="password"/>
    </div>
    <br />
    <div class="mb-3">
        <input name="confirmPassword" type="password" class="form-control" placeholder="confirm password"/>
    </div>
    <br />
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
</div>